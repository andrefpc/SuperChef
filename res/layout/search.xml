<?xml version="1.0" encoding="UTF-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/drawer_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >
	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent" >
		<TextView
			android:id="@+id/keywordText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:text="Palavra-chave:"
			android:textAppearance="?android:attr/textAppearanceMedium" />
		<EditText
			android:id="@+id/keyword_text"
			style="@style/editTextStyle"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="30dp"
			android:layout_marginTop="20dp"
			android:layout_toRightOf="@+id/keywordText"
			android:hint="@string/keyword"
			android:inputType="textCapWords" />
		<TextView
			android:id="@+id/prepareTimeText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="80dp"
			android:text="Tempo:"
			android:textAppearance="?android:attr/textAppearanceMedium" />
		<EditText
			android:id="@+id/prepareTime_text"
			style="@style/editTextStyle"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="90dp"
			android:layout_marginTop="80dp"
			android:layout_toRightOf="@+id/prepareTimeText"
			android:hint="@string/prepareTime"
			android:inputType="textCapWords" />
		<TextView
			android:id="@+id/portionsText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="140dp"
			android:text="Porções:"
			android:textAppearance="?android:attr/textAppearanceMedium" />
		<EditText
			android:id="@+id/portions_text"
			style="@style/editTextStyle"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="80dp"
			android:layout_marginTop="140dp"
			android:layout_toRightOf="@+id/portionsText"
			android:hint="@string/portions"
			android:inputType="textCapWords" />
		<TextView
			android:id="@+id/cookTypeText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="200dp"
			android:text="Tipo de Comida:"
			android:textAppearance="?android:attr/textAppearanceMedium" />
		<Spinner
			android:id="@+id/cookTypeSpinner"
			style="@style/spinnerBackgroud"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="200dp"
			android:layout_toRightOf="@+id/cookTypeText"
			android:dropDownWidth="fill_parent" />
		<TextView
			android:id="@+id/prepareModeText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="260dp"
			android:text="Modo de preparo:"
			android:textAppearance="?android:attr/textAppearanceMedium" />
		<Spinner
			android:id="@+id/prepareModeSpinner"
			style="@style/spinnerBackgroud"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="260dp"
			android:layout_toRightOf="@+id/prepareModeText" />
		<TextView
			android:id="@+id/dietText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="320dp"
			android:text="Dieta:"
			android:textAppearance="?android:attr/textAppearanceMedium" />
		<Spinner
			android:id="@+id/dietSpinner"
			style="@style/spinnerBackgroud"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="105dp"
			android:layout_marginTop="320dp"
			android:layout_toRightOf="@+id/dietText" />
		<TextView
			android:id="@+id/recipyCousineText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="380dp"
			android:text="Cozinha:"
			android:textAppearance="?android:attr/textAppearanceMedium" />
		<Spinner
			android:id="@+id/recipyCousineSpinner"
			style="@style/spinnerBackgroud"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="80dp"
			android:layout_marginTop="380dp"
			android:layout_toRightOf="@+id/recipyCousineText" />
		<TextView
			android:id="@+id/ocasionText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="440dp"
			android:text="Ocasião:"
			android:textAppearance="?android:attr/textAppearanceMedium" />
		<Spinner
			android:id="@+id/ocasionSpinner"
			style="@style/spinnerBackgroud"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="80dp"
			android:layout_marginTop="440dp"
			android:layout_toRightOf="@+id/ocasionText"
			android:textAlignment="center" />
		<Button
			android:id="@+id/search"
			style="@style/btnStyleArsenic"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="500dp"
			android:text="@string/search" />
	</RelativeLayout>
	<!-- The navigation drawer -->
	<ListView
		android:id="@+id/left_drawer"
		android:layout_width="240dp"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="#111"
		android:choiceMode="singleChoice"
		android:divider="@android:color/transparent"
		android:dividerHeight="0dp" />
</android.support.v4.widget.DrawerLayout>